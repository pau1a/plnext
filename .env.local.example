# Copy this file to .env.local and fill in with your project credentials.

# Supabase
SUPABASE_URL=https://YOURPROJECT.supabase.co
SUPABASE_ANON_KEY=eyJ...replace-with-anon-key

# Analytics - PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Analytics - Google Analytics 4
# Leave blank to disable GA4 tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=
# Set to "false" to explicitly disable GA4 even if measurement ID is present
NEXT_PUBLIC_GA_ENABLED=true

# Analytics - Umami (Self-hosted, Privacy-First)
# Umami is consent-free (no cookies, no PII) and runs alongside GA/PostHog
# Website ID from Umami dashboard (format: UUID)
NEXT_PUBLIC_UMAMI_WEBSITE_ID=
# Script URL (served from CDN or origin)
NEXT_PUBLIC_UMAMI_SCRIPT=https://cdn.networklayer.co.uk/analytics/s-v1.js
# Tracking endpoint (reverse-proxied to Umami API)
NEXT_PUBLIC_UMAMI_HOST=/e
